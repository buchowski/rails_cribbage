<%= form_with(url: gvm.update_path, method: "patch") do |form| %>
  <div class="row">
    <% gvm.player_cards.each do |card| %>
      <%= render partial: 'cards/card_radio', locals: { card: card } %>
    <% end %>
  </div>
  <%= form.submit "Play card", id: "play_btn", class: "button is-primary" %>
  <%= form.hidden_field :type_of_update, value: 'play_card' %>
  <%= render partial: "games/game_state_hidden_fields", locals: { gvm: gvm, form: form } %>
<% end %>
