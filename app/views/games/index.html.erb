<h1>Games#index</h1>

<% flash.each do |name, msg| %>
  <div class="error_msg">
    <%= msg %>
  </div>
<% end %>

<%= form_with url: '/games' do |form| %>
  <%= form.radio_button :creator_id, "hank", :checked => true %>
  <%= form.label :creator_id_hank, "Hank" %>
  <%= form.radio_button :creator_id, "sally" %>
  <%= form.label :creator_id_sally, "Sally" %>
  <%= form.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>game_id</th>
      <th>creator_id</th>
      <th>guest_id</th>
      <th>created_at</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <th><%= game.id %></th>
        <th><%= game.player_one_id %></th>
        <th><%= game.player_two_id %></th>
        <th><%= game.created_at.strftime("%m-%d-%Y %T") %></th>
        <th>
          <%= button_to "join", game_path(game), { method: :patch, params: {type_of_update: 'join_game'} } %>
        </th>
        <th>
          <%= button_to "delete", game_path(game), method: :delete  %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>


