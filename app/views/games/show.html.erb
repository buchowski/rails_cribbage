<h1><%= "Game #{@game.id}" %></h1>

<% @game.attributes.each do |att| %>
  <div>
    <%= att %>
  </div>
<% end %>

<%= button_to 'start', game_path(@game.id), { method: :patch, params: {type_of_update: 'start_game' } } %>
<%= button_to 'join', game_path(@game.id), { method: :patch, params: {type_of_update: 'join_game' } } %>
<%= button_to 'cut for deal', game_path(@game.id), { method: :patch, params: {type_of_update: 'cut_for_deal' } } %>
