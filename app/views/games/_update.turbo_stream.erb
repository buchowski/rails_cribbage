<turbo-stream action="replace" target="error_msg_container">
  <template>
    <div id="error_msg_container">
      <%= render partial: "/flash_errors", formats: [:html], locals: { error_msg: flash[:error_msg] } %>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="<%= dom_id(gvm) %>">
  <template>
    <div id="<%= dom_id(gvm) %>" class="relative_game_container">
      <% if pre_bot_update_html_string.nil? %>
          <%= render(
            partial: "games/game_play_container",
            formats: [:html],
            locals: { gvm: gvm, app: app }
          ) %>
      <% else %>
        <div class="<%= gvm.show_in_n_seconds_class %> absolute_game_container">
          <%= render(
            partial: "games/game_play_container",
            formats: [:html],
            locals: { gvm: gvm, app: app }
          ) %>
        </div>
        <div class="<%= gvm.hide_in_n_seconds_class %> absolute_game_container">
          <%= pre_bot_update_html_string %>
        </div>
      <% end %>
    </div>
  </template>
</turbo-stream>

