<h1 class="title">Log in</h1>

<div class="form-container block">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "checkbox" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button is-primary" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
